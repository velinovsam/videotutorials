<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Video Tutorials</h1>
        <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
    </div>
</div>

<div>
    <h1 class="text-center">Top Courses</h1>
    <div class="container mt-3">
        <div class="row d-flex justify-content-center">
            <div class="card-deck">
                {{#each courses}}
                <div class="card mb-4">
                    <img class="card-img-top" src="{{this.imageUrl}}" alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{this.title}}</h4>
                        <p class="card-text">{{this.description}}</p>
                    </div>
                    {{#if ../isLogged}}
                    <div class="card-footer">
                        <a href="/course/details/{{this._id}}"><button type="button"
                                class="btn btn-info">Details</button></a>
                    </div>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
        

            <form action="/course/search" method="GET" class="text-center border border-light p-5">
                <div class="form-group">
                    <label for="username">Course name</label>
                    <input type="text" class="form-control" placeholder="Username" name="coursename">
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
    </div>
</div>